    "/tasks": {
       "get": {
    "summary": "Get all tasks",
    "tags": ["Tasks"],
    "parameters": [
      {
        "name": "assigneeName",
        "in": "query",
        "schema": { "type": "string" },
        "description": "Filter tasks by assignee name (partial match)"
      },
      {
        "name": "reporterName",
        "in": "query",
        "schema": { "type": "string" },
        "description": "Filter tasks by reporter name (partial match)"
      },
      {
        "name": "status",
        "in": "query",
        "schema": {
          "type": "string",
          "enum": ["todo", "inprogress", "done"]
        },
        "description": "Filter tasks by status"
      },
      {
        "name": "startDate",
        "in": "query",
        "schema": { "type": "string", "format": "date" },
        "description": "Filter tasks starting from this date (inclusive)"
      },
      {
        "name": "endDate",
        "in": "query",
        "schema": { "type": "string", "format": "date" },
        "description": "Filter tasks ending on this date (inclusive)"
      },
      {
        "name": "sortBy",
        "in": "query",
        "schema": {
          "type": "string",
          "enum": ["created_at", "updated_at", "startDate", "endDate"]
        },
        "description": "Field to sort by"
      },
      {
        "name": "order",
        "in": "query",
        "schema": {
          "type": "string",
          "enum": ["asc", "desc"]
        },
        "description": "Sort order"
      }
    ],
    "responses": {
      "200": {
        "description": "List of tasks",
        "content": {
          "application/json": {
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/Task"
              }
            }
          }
        }
      }
    }
  },
      "post": {
